
<p id="notice"><%= notice %></p>


<h1 style="font-size: 30px; text-align: center;">전국 장애인 스포츠 시설</h1>

<div style='width: 100%;'>
  <div id="map" style='width: 100%; height: 500px;'></div>
</div>

<script type="text/javascript">
    handler = Gmaps.build('Google');
    handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
      markers = handler.addMarkers(<%=raw @hash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
      handler.getMap().setZoom(7);

    });
</script>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apimaps.each do |apimap| %>
      <tr>
        <td><%= apimap.name %></td>
        <td><%= apimap.latitude %></td>
        <td><%= apimap.longitude %></td>
        <td><%= link_to 'Show', apimap %></td>
        <td><%= link_to 'Edit', edit_apimap_path(apimap) %></td>
        <td><%= link_to 'Destroy', apimap, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

